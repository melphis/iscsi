{
  /*
    nodejs 14+
    "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist"
  },*/
  "compilerOptions": {
    "moduleResolution": "node",
    "removeComments": true,
    "module": "es2020",
    "target": "ES2022",
    "lib": ["es2020"],
    "sourceMap": true,
    "outDir": "./dist"
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "public"
  ]
}
